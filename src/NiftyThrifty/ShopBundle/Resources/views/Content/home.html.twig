{% block page_content %}

<script>
window.addEvent('domready',function() {
	$$('div.current_cell').addEvent('mouseover', function(){
		var image = $(this).getElementById('hiddencellimg').getStyle('background');
		$(this).setStyle('background',image);
	});
	$$('div.current_cell').addEvent('mouseout', function(){
		var image = $(this).getElementById('hiddencellimgbw').getStyle('background');
		$(this).setStyle('background',image);
	});
});
</script>

