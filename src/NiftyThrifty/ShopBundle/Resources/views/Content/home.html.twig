<div id="homeIndex" class="featured_container">
	<div class="featured_left">
		<div id="slideshow-container" style="width:700px;height:450px;">
            {% for collection in collections %}
		<a href="{{ path('show_collection', {'slug': collection.getCollectionName|slugify}) }}-{{ collection.getId }}"><img src="/{{collection.getCollectionVisualHomeHero }}" /></a>
            {% endfor %}
		</div>
	</div>
	<div class="featured_right">
        {% render(controller('NiftyThriftyShopBundle:Navigation:getBanner', {'bannerTypeName': 'home_upper_right'})) %}
	</div>
</div>
<div id="homeCollections" class="current_container current_container_home">
            {% for collection in collections %}
		<div id="homeCollectionId_{{ collection.getCollectionId }}" class="current_cell" style="background:url('/{{collection.getCollectionVisualMainPanelBw }}');">
			<a href="{{ path('show_collection', {'slug': collection.getCollectionName|slugify}) }}-{{ collection.getId }}" title="{collection_title}" class="top">
			</a>
			<div class="current_cell_bar current_cell_bar_home">
				<a href="{{ path('show_collection', {'slug': collection.getCollectionName|slugify}) }}-{{ collection.getId }}" title="{{ collection.getCollectionName }}">{{ collection.getCollectionName }}</a>
				<p>{{ collection.getCollectionDescription }}</p>
			</div>
			<div id="hiddencellimg" style="display:none;background:url('/{{collection.getCollectionVisualMainPanel }}');"></div>
			<div id="hiddencellimgbw" style="display:none;background:url('/{{collection.getCollectionVisualMainPanelBw }}');"></div>
		</div>
            {% endfor %}
	<div class="clear"></div>
</div>

